  <form id="surveyForm">

    <!-- Optional Name -->
    <div class="form-group">
      <label>Full Name (Optional)</label>
      <input type="text" id="name">
    </div>

    <!-- Optional Email -->
    <div class="form-group">
      <label>Email (Optional)</label>
      <input type="email" id="email">
    </div>

    <!-- Question 1 -->
    <div class="form-group">
      <label>Do you know what intersession is?</label><br>
      <input type="radio" name="knowIntersession" value="Yes"> Yes
      <input type="radio" name="knowIntersession" value="No"> No
      <div class="error-message">Please select an option.</div>
    </div>

    <!-- Question 2 -->
    <div class="form-group">
      <label>Did you know it replaces one regular semester class?</label><br>
      <input type="radio" name="knowReplacement" value="Yes"> Yes
      <input type="radio" name="knowReplacement" value="No"> No
      <div class="error-message">Please select an option.</div>
    </div>

    <!-- Question 3 -->
    <div class="form-group">
      <label>Would you take an intersession class?</label><br>
      <input type="radio" name="interestedInClass" value="Yes"> Yes
      <input type="radio" name="interestedInClass" value="No"> No
      <div class="error-message">Please select an option.</div>
    </div>

    <!-- Question 4 -->
    <div class="form-group">
      <label>Do you think shorter classes affect quality?</label><br>
      <input type="radio" name="qualityShortClass" value="Yes"> Yes
      <input type="radio" name="qualityShortClass" value="No"> No
      <div class="error-message">Please select an option.</div>
    </div>

    <!-- Question 5 -->
    <div class="form-group">
      <label>Would you compare it to a regular semester course?</label><br>
      <input type="radio" name="compareQuality" value="Better"> Better
      <input type="radio" name="compareQuality" value="Same"> Same
      <input type="radio" name="compareQuality" value="Worse"> Worse
      <div class="error-message">Please select an option.</div>
    </div>

    <button type="submit">Submit</button>

  </form>
